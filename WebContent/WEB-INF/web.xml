<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
	<display-name>edziekanat</display-name>
	<!-- 	Servlets 	-->
	<!-- Common -->
	<servlet>
		<servlet-name>AdminIndex</servlet-name>
		<jsp-file>/administrator/admin_index.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>StudentIndex</servlet-name>
		<jsp-file>/student/student_index.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>LecturerIndex</servlet-name>
		<jsp-file>/lecturer/lecturer_index.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>LoginForm</servlet-name>
		<jsp-file>/login.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>403Error</servlet-name>
		<jsp-file>/403.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>404Error</servlet-name>
		<jsp-file>/404.jsp</jsp-file>
	</servlet>
	<!-- Student -->
	    <servlet>
          <servlet-name>StudentGetApplications</servlet-name>
          <servlet-class>edziekanat.controller.student.ApplicationsController</servlet-class>
      </servlet>
	<servlet>
		<servlet-name>StudentApplications</servlet-name>
		<jsp-file>/student/applications.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>StudentLecturers</servlet-name>
		<jsp-file>/student/lecturers.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>StudentMessages</servlet-name>
		<jsp-file>/student/messages.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>StudentPayments</servlet-name>
		<jsp-file>/student/payments.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>StudentScholarships</servlet-name>
		<jsp-file>/student/scholarships.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>StudentSubjects</servlet-name>
		<jsp-file>/student/subjects.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>StudentTimetable</servlet-name>
		<jsp-file>/student/timetable.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>StudentTranscript</servlet-name>
		<jsp-file>/student/transcript.jsp</jsp-file>
	</servlet>
	<!--	Servlet mappings	-->
	<!-- Common -->
	<servlet-mapping>
		<servlet-name>AdminIndex</servlet-name>
		<url-pattern>/admin</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StudentIndex</servlet-name>
		<url-pattern>/student</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LecturerIndex</servlet-name>
		<url-pattern>/lecturer</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginForm</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>403Error</servlet-name>
		<url-pattern>/403</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>404Error</servlet-name>
		<url-pattern>/404</url-pattern>
	</servlet-mapping>
	<!-- Student -->
	<servlet-mapping>
		<servlet-name>StudentApplications</servlet-name>
		<url-pattern>/student/applications</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StudentLecturers</servlet-name>
		<url-pattern>/student/lecturers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StudentMessages</servlet-name>
		<url-pattern>/student/messages</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StudentPayments</servlet-name>
		<url-pattern>/student/payments</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StudentScholarships</servlet-name>
		<url-pattern>/student/scholarships</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StudentSubjects</servlet-name>
		<url-pattern>/student/subjects</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StudentTimetable</servlet-name>
		<url-pattern>/student/timetable</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StudentTranscript</servlet-name>
		<url-pattern>/student/transcript</url-pattern>
	</servlet-mapping>
	<!-- TODO: Delete this -->
	<servlet>
		<servlet-name>Test</servlet-name>
		<jsp-file>/test.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>Test</servlet-name>
		<url-pattern>/testindex</url-pattern>
	</servlet-mapping>
	<!-- Security Configuration -->
	<security-constraint>
		<display-name>HomeSecurityConstraint</display-name>
		<web-resource-collection>
			<web-resource-name>HomePage</web-resource-name>
			<url-pattern>/home</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<security-constraint>
		<display-name>AdminSecurityConstraint</display-name>
		<web-resource-collection>
			<web-resource-name>AdminsPages</web-resource-name>
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<security-constraint>
		<display-name>StudentSecurityConstraint</display-name>
		<web-resource-collection>
			<web-resource-name>StudentsPages</web-resource-name>
			<url-pattern>/student/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>student</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<security-constraint>
		<display-name>LecturerSecurityConstraint</display-name>
		<web-resource-collection>
			<web-resource-name>LecturersPages</web-resource-name>
			<url-pattern>/lecturer/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>lecturer</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/login</form-login-page>
			<form-error-page>/login</form-error-page>
		</form-login-config>
	</login-config>
	<security-role>
		<role-name>admin</role-name>
	</security-role>
	<security-role>
		<role-name>student</role-name>
	</security-role>
	<security-role>
		<role-name>lecturer</role-name>
	</security-role>
	<error-page>
		<error-code>403</error-code>
		<location>/403</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/404</location>
	</error-page>
	<!-- Resources -->
	<resource-ref>
		<res-ref-name>jdbc/edziekanat</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<!-- Welcome file -->
	<welcome-file-list>
		<welcome-file>home</welcome-file>
	</welcome-file-list>
</web-app>